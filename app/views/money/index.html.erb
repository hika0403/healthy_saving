<%= render "shared/header" %>

<p id="notice"><%= notice %></p>

<%= link_to '目標設定', new_goal_path %>

<h1>目標</h1>
<table>
  <thead>
    <tr>
      <th>Saving Goal</th>
      <th>Weight Goal</th>
      <th>Period</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @goal.each do |goal| %>
      <tr>
        <td><%= goal.saving_goal %></td>
        <td><%= goal.weight_goal %></td>
        <td><%= goal.period %></td>

        <td><%= goal.user %></td>
        <td><%= link_to 'Show', goal %></td>
        <td><%= link_to 'Edit', edit_money_path(goal) %></td>
        <td><%= link_to 'Destroy', goal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>



<h1>今までの合計金額</h1>

