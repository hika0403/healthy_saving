<%= render "shared/header" %>
<p id="notice"><%= notice %></p>

<h1>Money</h1>

<table>
  <thead>
    <tr>
      <th>Saving amount</th>
      <th>Day</th>
      <th>Text</th>
      <th>Goal</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @money.each do |money| %>
      <tr>
        <td><%= money.saving_amount %></td>
        <td><%= money.day %></td>
        <td><%= money.text %></td>
        <td><%= money.goal %></td>
        <td><%= money.user %></td>
        <td><%= link_to 'Show', money %></td>
        <td><%= link_to 'Edit', edit_money_path(money) %></td>
        <td><%= link_to 'Destroy', money, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Money', new_money_path %>
