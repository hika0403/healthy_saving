<%# サイドバー %>
<div class="container-fluid">
  <div class="row">
    <nav class="col-md-2 d-none d-md-block bg-light sidebar">
      <div class="sidebar-sticky">
        <ul class="nav flex-column">
          <li class="nav-item">
          <%# 映らない %>
            <a class="nav-link active" href="#">
              <span data-feather="home"></span>
              <span class="sr-only">映らない</span>
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/money/new">
              <span data-feather="plus-circle"></span>
              今日の記録
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/money/money[:id]">
              <span data-feather="shopping-cart"></span>
              貯金記録
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">
              <span data-feather="bar-chart-2"></span>
              体重記録
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/users/edit">
              <span data-feather="users"></span>
              ユーザー管理
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/">
              <span data-feather="file"></span>
              トップページへ戻る
            </a>
          </li>
        </ul>
      </div>
    </nav>

<%# メインコンテンツ %>
    <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
    <%# 映らない %>
    <a class="nav-link active" href="#">
      <span data-feather="home"></span>
      <span class="sr-only">映らない</span>
    </a>

    <% unless @goal.present? %> 
      <%= link_to 'まずは目標を設定しよう', new_goal_path, class: "h1" %>
      <img src="app/assets/images/goal_index.jpg" class="rounded mx-auto d-block" alt="Responsive image">
    <% end %> 

    <% if @goal.present? %>
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
      <h1 class="h2">貯金金額</h1>
      <div class="btn-toolbar mb-2 mb-md-0">
        <div class="btn-group mr-2">
          <!-- <button type="button" class="btn btn-sm btn-outline-secondary">Share</button> -->
          <button type="button" class="btn btn-sm btn-outline-secondary">共有</button>
          <!-- <button type="button" class="btn btn-sm btn-outline-secondary">Export</button> -->
          <button type="button" class="btn btn-sm btn-outline-secondary">出力</button>
        </div>
        <button type="button" class="btn btn-sm btn-outline-secondary dropdown-toggle">
          <span data-feather="calendar"></span>
          <!-- This week -->
          今週
        </button>
      </div>
    </div>

    <h1>目標</h1>
    <table>
      <thead>
        <tr>
          <th>貯金金額目標</th>
          <th>目標体重</th>
          <th>いつまで</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @goal.each do |goal| %>
          <tr>
            <td><%= goal.saving_goal %></td>
            <td><%= goal.weight_goal %></td>
            <td><%= goal.period %></td>
          </tr>
          <%= link_to '目標を変更する', goal_path(goal.id), class: "h3" %>
        <% end %>
      </tbody>
    </table>

    <canvas class="my-4 w-100" id="myChart" width="900" height="380"></canvas>
    <% end %>
    </main>
  </div>
</div>

<!-- Icons -->
<script src="https://unpkg.com/feather-icons/dist/feather.min.js"></script>
<script>
  feather.replace()
</script>

<!-- Graphs -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.1/Chart.min.js"></script>
<script>
  var ctx = document.getElementById("myChart");
  var myChart = new Chart(ctx, {
    type: 'line',
    data: {
      labels: ["Sunday", "Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday"],
      datasets: [{
        data: [15339, 21345, 18483, 24003, 23489, 24092, 12034],
        lineTension: 0,
        backgroundColor: 'transparent',
        borderColor: '#007bff',
        borderWidth: 4,
        pointBackgroundColor: '#007bff'
      }]
    },
    options: {
      scales: {
        yAxes: [{
          ticks: {
            beginAtZero: false
          }
        }]
      },
      legend: {
        display: false,
      }
    }
  });
</script>

