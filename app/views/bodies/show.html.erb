<div class="container-fluid">

  <div class="row">
    <%= render 'shared/header' %>
  </div>

<%# 映らない %>
  <a class="nav-link active p-4" href="#">
    <span data-feather="home"></span>
    <span class="sr-only">映らない</span>
  </a>

  <div class="row">
    <h1 class="mt-3 text-center">今まで体重記録一覧</h1>
  </div>

  <div class="row">
    <div class="col-10 d-block mx-auto">
      <table class="table table-hover">
        <thead class="bg-light">
          <tr>
            <th scope="col">DAY</th>
            <th scope="col">体重</th>
            <th scope="col">削除</th>
          </tr>
        </thead>
        <% @body.each do |body| %>
        <tbody>
          <tr scope="row">
            <td><%= body.created_at.strftime('%Y/%m/%d') %></td>
            <td><%= body.weight %></td>
            <td>
              <%= link_to body_path, method: :delete, data: { confirm: '削除しますか?' } do %>
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
              <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"/>
              <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"/>
              </svg>
              <% end %>
            </td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>